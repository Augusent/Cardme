<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/Yocard.Toolbar"
                app:navigationIcon="@drawable/ic_hamburger" />

        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <com.popalay.yocard.ui.base.widgets.SwypelessViewPager
                android:id="@+id/host"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <include layout="@layout/shadow" />

            <android.support.design.widget.BottomNavigationView
                android:id="@+id/bottom_bar"
                style="@style/Yocard.BottomBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:elevation="@dimen/normal_elevation"
                app:layout_behavior="@string/bottom_navigation_behavior"
                app:menu="@menu/menu_home" />

        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

</layout>
