<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="wm"
            type="com.popalay.cardme.presentation.screens.cards.CardsViewModel"
            />

        <variable
            name="publisher"
            type="com.jakewharton.rxrelay2.PublishRelay&lt;com.popalay.cardme.data.models.Card>"
            />

    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/window_background"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_cards"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            bind:cardClick="@{publisher}"
            bind:cardsAdapter="@{wm.cards}"
            bind:defaultList="@{true}"
            bind:showImage="@{wm.showImage}"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/button_add"
            style="@style/Cardme.FloatingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:src="@drawable/ic_add"
            />

        <TextView
            style="@style/Cardme.ListPlaceholderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/list_cards_placeholder"
            bind:listPlaceholder="@{wm.cards}"
            />

    </android.support.design.widget.CoordinatorLayout>

</layout>