<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.popalay.yocard.data.models.Card" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height"
        android:background="@{item.colorRes}"
        android:elevation="@dimen/card_elevation"
        android:orientation="vertical"
        android:padding="@dimen/normal">

        <ImageView
            android:layout_width="@dimen/card_type_icon_size"
            android:layout_height="@dimen/card_type_icon_size"
            android:layout_alignParentEnd="true"
            android:src="@{item.iconRes}" />

        <com.popalay.yocard.ui.base.widgets.CharacterWrapTextView
            android:id="@+id/text_number"
            style="@style/CardNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@{item.redactedNumber}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/text_holder"
            android:layout_marginTop="@dimen/normal"
            android:text="@string/card_holder"
            android:textAllCaps="true"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption" />

        <TextView
            android:id="@+id/text_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/normal"
            android:layout_marginTop="@dimen/smallest"
            android:text="@{item.holderName}"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </RelativeLayout>

</layout>
