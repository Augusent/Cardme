<resources>

    <style name="Yocard" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/window</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
    </style>

    <style name="Yocard.Splash">
        <item name="colorPrimaryDark">@color/deep_blue</item>
        <item name="android:windowBackground">@color/deep_blue</item>
    </style>

    <style name="Yocard.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DialogTheme" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="ProgressDialogTheme" parent="DialogTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Yocard.Translucent">
        <!-- using a semi-transparent window background for the drag-back gesture -->
        <item name="android:windowBackground">@color/scrim</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Yocard.Translucent.DialogActivityTheme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="Yocard.BottomBar">
        <item name="android:background">@drawable/bg_bottom_bar</item>
        <item name="itemBackground">@drawable/bg_bottom_bar_item</item>
        <item name="itemIconTint">@color/bottom_bar_item</item>
        <item name="itemTextColor">@color/bottom_bar_item</item>
    </style>

    <style name="FloatingButton">
        <item name="android:layout_margin">@dimen/normal</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="PrimaryButton" parent="Base.TextAppearance.AppCompat.Widget.Button.Colored">
        <item name="android:backgroundTint">@color/accent</item>
    </style>

    <style name="CardNumber">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Subhead</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
