<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.popalay.cardme"
    tools:ignore="UnusedAttribute">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.NFC" />

    <uses-feature
        android:name="android.hardware.nfc"
        android:required="false" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:resizeableActivity="true"
        android:roundIcon="@mipmap/ic_launcher"
        android:theme="@style/Cardme">

        <activity
            android:name=".screens.splash.SplashActivity"
            android:theme="@style/Cardme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".screens.home.HomeActivity"
            android:theme="@style/Cardme.Home">
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="application/com.popalay.cardme" />
            </intent-filter>
        </activity>

        <activity
            android:name=".screens.addcard.AddCardActivity"
            android:label="@string/card_details"
            android:theme="@style/Cardme.AddCard"
            android:windowSoftInputMode="adjustNothing" />

        <activity
            android:name=".screens.holderdetails.HolderDetailsActivity"
            android:label="@string/holder_details"
            android:theme="@style/Cardme.HolderDetails" />

        <activity
            android:name=".screens.adddebt.AddDebtActivity"
            android:theme="@style/Cardme.Translucent.DialogActivity" />

        <activity
            android:name=".screens.carddetails.CardDetailsActivity"
            android:theme="@style/Cardme.Translucent.DialogActivity"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".screens.trash.TrashActivity"
            android:label="@string/trash"
            android:theme="@style/Cardme.Trash" />

        <activity
            android:name=".screens.settings.SettingsActivity"
            android:label="@string/settings"
            android:theme="@style/Cardme.Settings" />

    </application>

</manifest>